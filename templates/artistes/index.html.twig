 {% extends 'base.html.twig' %}


     {% block metaTitle %}
         "Artistes"
     {% endblock %}


     {% block title %} 
         Artistes 
     {% endblock %}

     {% block body %}
  
         {# *** Test impl√©mentation fonction rechercher *** #}
            {# <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.."> #}

         {# ***** Titre de l'article ***** #}
             <h1 class="h3 mb-3 font-weight-normal" id="h1_artistes"> Artistes </h1>

         {# *** ALBUM CARD *** #}
 
             <div class="row mainFrame col-10">

                 <div class="row">
                                                
                     {% for user in users %}
                    
                         <div class="flip-card card col-12 col-md-3 " style="height:500px; min-width:25%" >

                             <div class="flip-card-inner">    

                                 {# *** Carte > Image De l'artiste / utilisateur *** #}
                                     <div class="flip-card-front" >
     
                                         <h2 class="col-12"> {{user.login}} </h2>
     
                                             <img class="col-12" src="/uploads/avatar/{{user.avatar}}" alt="avatar">
         
                                     </div>
     
                                 {# *** Carte > Partie: Nom de l'artiste / utilisateur *** #}
                                     <div class="flip-card-back col-12 col-md-3 ">
     
                                         <h2 class="lead"> {{user.login}} </h2>
     
                                     </div>
                                 
                             </div>
     
                         </div>
                         
                     {% endfor %}                    
                    
                 </div>

             </div>

         </div>

         <nav aria-label="...">

             <div class="pagination justify-content-center">
                 {{ knp_pagination_render(users, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
             </div>

         </nav>
        
     {% endblock %}     


      