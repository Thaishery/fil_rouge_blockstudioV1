 {% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Inscription "
     {% endblock %}

     {% block title %} 
         Inscription
     {% endblock %}

     {% block body %}

        <link rel="stylesheet" href="style/style_register.css">

            {# *** Balise div pour remplacer balise body de l'exemple: https://getbootstrap.com/docs/5.0/examples/sign-in/ *** #}
            <div id="body" class="text-center"> 

              <div class="container">

                <main class="col-9">
                    {{ form_start
                      (registrationForm,
                            {
                              'attr':

                                {
                                  'class':'needs-validation',
                                  'novalidate':''
                                }
                            }
                      )
                    }}

                    {# *** Conteneur du titre du formulaire *** #}
                    <div class="py-5 text-center">

                      {# *** Image du formulaire *** #}
                      <img class="d-block mx-auto mb-4" src="/logoGrand.webp" alt="Logo du site" width="72" height="57">

                        {# *** Titre du formulaire *** #}
                        <h2> Formulaire d'Inscription </h2>

                          {# *** Phrase d'accroche du formulaire *** #}
                          <p class="lead"> 
                            Inscrivez-vous gratuitement pour créer un compte et accéder au contenu du site. 
                          </p>

                    {# Fin du Conteneur: titre du formulaire #}
                    </div>

                      {# Conteneur du champ titre  #}
                      <div class="col-12">

                        <h4 class="mb-3"> Votre profil </h4>

                        <div class="row g-3">
                       
                        {# ********** CHAMP PSEUDO ********** #}

                            <div class="col-12">   
                                   
                                {# *** LABEL *** #}

                                {{form_label
                                    (registrationForm.login,
                                        'Pseudo'
                                    )
                                }}

                              <div class="input-group has-validation">
                                <span class="input-group-text"> @ </span>
                               

                                {# *** INPUT *** #}

                                {# {{form_widget
                                    (registrationForm.login,
                                      {
                                        'attr': {'placeholder':'Entrez votre pseudo',
                                        'class':'form-control',
                                        'pattern':'[a-zA-Z0-9]',
                                        'title':'Votre pseudo dois etre composer uniquement de chiffres et de lettre, majuscules accepté.'
                                      }}
                                    ) 
                                }} #}
                                {{form_widget
                                    (registrationForm.login,
                                      {
                                        'attr': {'placeholder':'Entrez votre pseudo',
                                        'class':'form-control',
                                        }}
                                    ) 
                                }}
                               
                                 <div class="invalid-feedback">
                                     Le champ pseudo est requis.
                                      {{form_errors(registrationForm.login)}}
                                 </div>
                               </div>
                                 
                                 <span class="text-danger">{{form_errors(registrationForm.login)}}</span>
                                 
                              
                              

                            </div>

                        {# ********** CHAMP PRENOM ********** #}   
                         
                            <div class="col-sm-6">   
                                   
                                {# *** LABEL *** #}
                                {{form_label
                                    (registrationForm.firstname,
                                        'Prénom'
                                    )
                                }}

                                {# *** INPUT *** #}
                                {{form_widget
                                    (registrationForm.firstname,
                                      {
                                        'attr': {'placeholder':'Entrez votre prénom',
                                        'class':'form-control',
                                      }}
                                    ) 
                                }}

                                {# *** IF ERROR *** #}

                                <div class="invalid-feedback">
                                  Le champ prénom est requis.
                                  {{form_errors(registrationForm.firstname)}}
                                </div>
                                <span class="text-danger">{{form_errors(registrationForm.firstname)}}</span>
                       
                            </div>

                        {# ********** CHAMP NOM ********** #}
                      
                            <div class="col-sm-6">
                            
                                {# *** LABEL *** #}

                                  {{form_label
                                    (registrationForm.lastname,
                                        'Nom'
                                    )
                                  }}

                                {# *** INPUT *** #}

                                {{form_widget
                                    (registrationForm.lastname,
                                      {
                                        'attr': {'placeholder':'Entrez votre Nom',
                                        'class':'form-control',
                                      }}
                                    ) 
                                }}

                                {# *** IF ERROR *** #}

                                  <div class="invalid-feedback">
                                    Le champ nom est requis.
                                    {{form_errors(registrationForm.lastname)}}
                                  </div>
                                   <span class="text-danger">{{form_errors(registrationForm.lastname)}}</span>
                                                           
                            </div>
                      
                          {# ********** CHAMP EMAIL ********** #}
                           
                            <div class="col-sm-6">
                            
                            {# *** LABEL *** #}

                                  {{form_label
                                    (registrationForm.email.first,
                                        'Adresse électronique'
                                    )
                                  }}

                            {# *** INPUT *** #}

                                {{form_widget
                                    (registrationForm.email.first,
                                      {
                                        'attr': {'placeholder':'Entrez votre adresse électronique',
                                        'class':'form-control',
                                      }}
                                    ) 
                                }}

                            {# *** IF ERROR *** #}

                                <div class="invalid-feedback">
                                  Le champ email est requis.
                                  {{form_errors(registrationForm.email.first)}}
                                </div>
                                 <span class="text-danger">{{form_errors(registrationForm.email.first)}}</span>
                         
                            </div>

                            {# ********** CHAMP EMAIL CONFIRMATION ********** #}
                          
                            <div class="col-sm-6">
                            
                            {# *** LABEL *** #}

                                  {{form_label
                                    (registrationForm.email.second,
                                        'Confirmer votre email'
                                    )
                                  }}

                            {# *** INPUT *** #}

                                {{form_widget
                                    (registrationForm.email.second,
                                      {
                                        'attr': {'placeholder':'Confirmer votre adresse électronique',
                                        'class':'form-control',
                                      }}
                                    ) 
                                }}

                            {# *** IF ERROR *** #}

                                <div class="invalid-feedback">
                                  Le champ Email est requis.
                                  {{form_errors(registrationForm.email.second)}}
                                </div>
                                 <span class="text-danger">{{form_errors(registrationForm.email.second)}}</span>
                                       
                            </div>

                           {# ********** CHAMP PASSWORD ********** #}

                            <div class="col-sm-6">
                            
                            {# *** LABEL *** #}

                                  {{form_label
                                    (registrationForm.plainPassword.first,
                                        'Mot de passe'
                                    )
                                  }}

                            {# *** INPUT *** #}

                                {{form_widget
                                    (registrationForm.plainPassword.first,
                                      {
                                        'attr': {'placeholder':'Entrez votre mot de passe',
                                        'class':'form-control',
                                      }}
                                    ) 
                                }}

                            {# *** IF ERROR *** #}

                                <div class="invalid-feedback">
                                  Le champ mot de passe est requis.
                                  {{form_errors(registrationForm.plainPassword.first)}}
                                </div>
                                 <span class="text-danger">{{form_errors(registrationForm.plainPassword.first)}}</span>
                                                 
                            </div>

                            {# ********** CHAMP PASSWORD CONFIRMATION ********** #}
                       
                            <div class="col-sm-6">
                            
                            {# *** LABEL *** #}

                                  {{form_label
                                    (registrationForm.plainPassword.second,
                                        'Confirmer votre mot de passe'
                                    )
                                  }}

                            {# *** INPUT *** #}

                                {{form_widget
                                    (registrationForm.plainPassword.second,
                                      {
                                        'attr': {'placeholder':'Confirmer votre mot de passe',
                                        'class':'form-control',
                                      }}
                                    ) 
                                }}

                            {# *** IF ERROR *** #}

                                <div class="invalid-feedback">
                                  Le champ confirmer votre mot de passe est requis.
                                  {{form_errors(registrationForm.plainPassword.second)}}
                                </div>
                                 <span class="text-danger">{{form_errors(registrationForm.plainPassword.second)}}</span>
                                               
                            </div>

                 {# **************************************************************************** #}
                 {# ****************************** CHAMP ADRESSE ******************************* #}
                 {# **************************************************************************** #}             

                            {# *** LABEL *** #}

                                   {{form_label
                                    (registrationForm.address,
                                        'Adresse'
                                    )
                                  }}

                            {# *** INPUT *** #}

                                  {{form_widget
                                    (registrationForm.address,
                                      {
                                        'attr': {'placeholder':'Entrez votre adresse. Exemple: 123 Rue de la liberté 00000 VILLE',
                                        'class':'form-control',
                                      }}
                                    ) 
                                }}

                             {# *** IF ERROR *** #}

                                <div class="invalid-feedback">
                                  Le champ adresse est requis.
                                  {{form_errors(registrationForm.address)}}
                                </div>
                                
                                <span class="text-danger">{{form_errors(registrationForm.address)}}</span>

                          {# ********** CHAMP ADRESSE ********** #}

                            <hr class="my-4">

                 {# **************************************************************************** #}
                 {# ****************************** CHAMP AVATAR ******************************* #}
                 {# **************************************************************************** #} 

                     {{form_label(registrationForm.avatar, ' Photo de profil')}}

                             {{form_widget
                              (registrationForm.avatar,
                                {
                                  'attr': {
                                  'class':'form-control',
                                }}
                              ) 
                          }}
                         
                      <hr class="my-4">                                           
           
                 {# **************************************************************************** #}
                 {# **************************** CHAMP AGREE TERMS ***************************** #}
                 {# **************************************************************************** #}
                
                   <div class="col-12">

                     {{form_label(registrationForm.agreeTerms, 'Veuillez accepter nos conditions :')}}

                         {{form_widget
                             (registrationForm.agreeTerms,
                               {
                                'attr':
                                   {
                                     'class':'form-check-input',
                                   }
                               }
                             ) 
                         }}

                         {# *** If Errors *** #}

                           <div class="invalid-feedback">
                             Le champ validation des conditions est requis.
                             {{form_errors(registrationForm.agreeTerms)}}
                           </div>

                           <span class="text-danger">
                             {{form_errors(registrationForm.agreeTerms)}}
                           </span>
                                     
                         </div>

                       <button class="btn btn-primary btn-lg btn-block" type="submit">                     
                         S'incrire
                       </button>
                                  
                     {{ form_end(registrationForm) }}

                   </div>              

                 {# **************************************************************************** #}
                 {# **************************************************************************** #}
                 {# **************************************************************************** #}

               </main>

             </div>
           
           </div>

           <script src="js/form-validation.js"></script>

     {% endblock %}