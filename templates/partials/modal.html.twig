 <!-- *** MODAL CONNEXION *** -->
<button type="button" class="btn btn-primary login-position" data-bs-toggle="modal" data-bs-target="#exampleModal">
  üè† Connection
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">üè† Menu de connection</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <body id="loginStyle" class="text-center">
    
        <main class="form-signin">

             <form method="post" action="{{ path ("app_login") }}">
             {# *** MESSAGE ERREUR *** #}
             {% if error is defined %}
                 <div class="alert alert-danger">
                     {{ error.messageKey|trans(error.messageData, 'security') }} 
                 </div>
             {% endif %}
             {# *** SI L'UTILISATEUR EST AUTHENTIFI√â *** #}
             {% if app.user %}
                 <div class="mb-3">

                     Vous etes connecter en tant que {{ app.user.username }},
                     <a href="{{ path('app_logout') }}"> Se d√©connecter </a>

                 </div>
             {% endif %}

             {# *** *** *** IMAGE: LOGO DU SITE *** *** *** #}
             <img class="mb-4" src="/logoGrand.webp" alt="" width="72" height="57">
             
                 <h1 class="h3 mb-3 font-weight-normal"> Se connecter </h1>

                     <label for="inputLogin" class="visually-hidden"> Pseudo </label>
                     <input  type="text"  name="login" id="inputLogin" class="form-control"  placeholder="Email address" required autofocus>
                             
                     <label for="inputPassword" class="visually-hidden"> Mot de passe </label>
                     <input  type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required=""> 

                     <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                          
                     <button class="btn btn-primary btn-lg btn-block" type="submit"> 
                         Se connecter 
                     </button> </br>            
                     <p>
                         {# Tu n'as pas encore cr√©er de compte ? #} 
                         <a class="btn btn-primary btn-lg btn-block" href="{{ path ('app_register') }}"> Cr√©er un compte </a>
                     </p>
             </form>
         </main>
         {#
             Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
             See https://symfony.com/doc/current/security/remember_me.html
         #}
         </body>
      </div>
    </div>
  </div>
</div>
