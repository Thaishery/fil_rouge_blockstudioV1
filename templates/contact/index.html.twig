     {% block body %}

         <main class="container">

             <article class="row"> 

                 <!-- Div Gauche -->   
                 <div id="bloc_gauche" class="col-3">

                     <!-- Photo de présentation du contact -->  
                     <figure>	

                         <img id="img_a" src=" {{ asset ('Photos/coverlexos1.jpg')}}" alt="Photo de présentation du contact." style="max-width:100%; max-height:100%;"/>
