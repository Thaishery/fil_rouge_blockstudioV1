 {% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Accueil "
     {% endblock %}


     {% block title %} 
         Accueil 
     {% endblock %}

     {% block body %}

         <div class="example-wrapper">
         
             <h1 class="h3 mb-3 font-weight-normal" id="h1_accueil"> Accueil </h1>

                    {# *** Mise en place du slideshow pour remplacer notre 1er carousel *** #}
                    <!-- Container for the image gallery -->
                    
                    <div class="container">
                            
                    {# *** Images pleine largeur avec nombre texte *** #}                    
                     
                        {% for service in services %}
                            
                            {% if service.getCarouselRank != null %}
                            <div class="mySlides">
                                <div class="numbertext"></div>
                                <img src="/uploads/picture/{{service.Picture}}" style="width:100%">
                            </div>
                            {% endif %}
                        {% endfor %}
    
                             {# *** Bouton: Précédent > Suivant *** #}
                                 <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                 <a class="next" onclick="plusSlides(1)">&#10095;</a>
                
                             {# *** Images texte *** #}
                             
                                 <div class="caption-container">                                    
                                        <p id="caption"></p>                                                                                                             
                                 </div>
                                
                             {# *** Images vignettes *** #}
    
                                 <div class="row carouselMini">
                                {% for service in services %}
                            
                                {% if service.getCarouselRank != null %}
                                
                                     {# *** Vignettes *** #}
                                         <div class="column">
                                             <img class="demo cursor" src="/uploads/picture/{{service.Picture}}" style="width:100%" id="{{service.id}}" onclick="currentSlide({{service.id}})" 
                                             alt="{{service.Title}}">
                                         </div>
                                         
                                {% endif %}
                                {% endfor %}
    
                                </div>
                                <br/>
                                <br/>   
                                </div>                    
                             
    
                             <article class="container">
                
                                 {# *** Boucle sur les " Entité " de home pour trouver l'active *** #}
                                     {% for home in homes %}
                
                                         {# *** Ne prend que la homepage active *** #}
                                             {% if home.isActive == true %}  
                                                
                                                 <h2 class="col-12 justify-content-center"> {{ home.title }} </h2>
                
                                                     {# *** Partie image du conteneur *** #}
                                                         <div class="container row">
                 
                                                             <img class="homeImage col-4" src="{{ home.picture }}" alt="">      
                
                                                             {# *** Partie texte du conteneur *** #} 
                
                                                                 {# * Description courte * #}
                                                                 <div class ="homeShortDesc col-6">
                                                                     {% autoescape false %}{{ home.shortDesc }}{% endautoescape %}
                                                                 </div>
                
                
                                                                 {# * Description longue * #}
                                                                 <div class="col-12">                           
                                                                     <div>
                                                                         <p class ="homeLongDesc"> {% autoescape false %}{{ home.longDesc }}{% endautoescape %} </p>
                                                                     </div>  
                                                                 </div>
                
                                                         </div>
                                                    
                                             {% endif %}
                
                                     {% endfor %}
                
                             </article>
    
                     </div>

         {# ***** Script: JavaScript ***** #}
             <script src="{{asset ('js/carousel.js')}}"></script>


