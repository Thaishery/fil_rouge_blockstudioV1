{% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Gestion de la homepage "
     {% endblock %}


     {% block title %}
         Gestion de la homepage
     {% endblock %}

     {% block body %}

         <h1 class="h3 mb-3 font-weight-normal"> Gestion de la page d'accueil </h1>

             <table class="table table-dark table-hover">

                 <thead class="thead-light">

                     <tr>
                         <th>Id</th>
                         <th>Titre</th>
                         <th>Photo</th>
                         <th>Courte description</th>
                         <th>Longue description</th>
                         <th>Est actif</th>
                         <th>Actions</th>
                     </tr>

                 </thead>
                 
                 <tbody>

                 {% for home in homes %}

                     <tr>
                         <td>{{ home.id }}</td>
                         <td>{{ home.title }}</td>
                         <td>{{ home.picture }}</td>
                         <td>{{ home.shortDesc }}</td>
                         <td>{{ home.longDesc }}</td>
                         <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
                         <td>
                             <a href="{{ path('home_show', {'id': home.id}) }}"> Voir </a>
                             <a href="{{ path('home_edit', {'id': home.id}) }}"> Modifier </a>
                         </td>
                     </tr>

                 {% else %}

                     <tr>
                         <td colspan="7">no records found</td>
                     </tr>

                 {% endfor %}

                     </tbody>
                      
                 </table>

     <a class="btn btn-lg btn-primary" href="{{ path('home_new') }}"> Cr√©er un nouvel article </a>

 {% endblock %}

