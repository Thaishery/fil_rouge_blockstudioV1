{% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Gestionnaire de page d'accueil"
     {% endblock %}

     {% block title %}
         Gestionnaire de la page d'accueil
     {% endblock %}

     {% block body %}

         <div class="example-wrapper">
 
               <h1 class="h3 mb-3 font-weight-normal"> Gestion de l'accueil </h1>

                  

                         <table class="table table-dark table-hover">

                               <thead class="thead-light">         

                                 <tr>
                                     <th> Id </th>
                                     <th> Titre </th>
                                     <th> Photo </th>
                                     <th> Courte description </th>
                                     <th> Longue description </th>
                                     <th> Est actif </th>
                                     <th> Actions </th>
                                 </tr>

                             </thead>
                             
                             <tbody>

                             {% for home in homes %}

                                 <tr>
                                     <td> {{ home.id }} </td>
                                     <td> {{ home.title }} </td>
                                     <td> {{ home.picture }} </td>
                                     <td> {{ home.shortDesc }} </td>
                                     <td> {{ home.longDesc }} </td>
                                     <td> {{ home.isActive ? 'Oui' : 'Non' }} </td>

                                         <td>
                                             <a class="btn btn-outline-primary" href="{{ path('home_show', {'id': home.id}) }}"> Voir </a> <br/>
                                             {# <a class="buttonGlitch" href="{{ path('home_show', {'id': home.id}) }}"> Voir </a> <br/> <br/>  #}
                                            
                                             <a class="btn btn-outline-primary" href="{{ path('home_edit', {'id': home.id}) }}"> Modifier </a>
                                             {# <a class="buttonGlitch" href="{{ path('home_edit', {'id': home.id}) }}"> Modifier </a> #}
                                         </td>

                                 </tr>

                             {% else %}

                                 <tr>
                                     <td colspan="7"> Aucun résultat </td>
                                 </tr>

                             {% endfor %}

                                 </tbody>
                                  
                         </table>

                    







                   

                 
                   <a class="btn btn-primary btn-lg btn-block" href="{{ path('home_new') }}"> Créer un nouvel article </a>


         </div>


     {% endblock %}

