 {% extends 'base.html.twig' %}

     
     {% block metaTitle %}
         " Projet "
     {% endblock %}


     {% block title %}
         Projet
     {% endblock %}

     {% block body %}

         <h1 class="h3 mb-3 font-weight-normal"> Projet </h1>

         <table class="table table-dark table-hover">

             <tbody>

                 <tr>
                     <th> Id </th>
                     <td> {{ projet.id }} </td>
                 </tr>

                 <tr>
                     <th> Titre </th>
                     <td> {{ projet.title }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Année </th>
                     <td> {{ projet.years ? projet.years|date('Y-m-d') : '' }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Nombre de tracks </th>
                     <td> {{ projet.nbOfTracks }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Sample </th>
                     <td> {{ projet.sample }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Link n°1 </th>
                     <td> {{ projet.linkone }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Link n°2 </th>
                     <td> {{ projet.linktwo }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Link n°3 </th>
                     <td> {{ projet.linkthree }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Cover, Artwork </th>
                     <td> {{ projet.cover }} </td>
                 </tr> 
 
                 <tr> 
                     <th>  Description </th>
                     <td> {{ projet.description }} </td>
                 </tr>

             </tbody>

         </table>


             <button class="btn btn-primary btn-lg btn-block">
                 <a href="{{ path('projet_index') }}"> Retour à la liste </a>
             </button>  

             {# <button class="btn btn-primary btn-lg btn-block"> #}
                 <a href="{{ path('projet_edit', {'id': projet.id}) }}"> Modifier </a>
             {# </button>    #}

             {# <button class="btn btn-primary btn-lg btn-block"> #}
                 {{ include('projet/_delete_form.html.twig') }}
             {# </button>   #}
 
     {% endblock %}
