 {% extends 'base.html.twig' %}


     {% block metaTitle %}
     " Informations utilisateur "
     {% endblock %}

     {% block title %}
         Informations utilisateur
     {% endblock %}


     {% block body %}

         <h1 class="h3 mb-3 font-weight-normal"> Informations utilisateur </h1>

         <table class="table table-dark table-hover">

             <tbody>

                 <tr>
                     <th> Id </th>
                     <td> {{ user.id }} </td>
                 </tr>

                 <tr>
                    <th> Pseudo </th>
                    <td> {{ user.login }} </td>
                 </tr>

                 <tr>
                     <th> Nom </th>
                     <td> {{ user.lastname }} </td>
                 </tr>

                 <tr>
                     <th> Prénom </th>
                     <td> {{ user.firstname }} </td>
                 </tr>

                 <tr>
                     <th> Addresse </th>
                     <td> {{ user.address }} </td>
                 </tr>

                 <tr>
                     <th> Téléphone </th>
                     <td> {{ user.phone }} </td>
                 </tr>

                 <tr>
                     <th> Email </th>
                     <td> {{ user.email }} </td>
                 </tr>

                 <tr>
                     <th> Avatar </th>
                     <td> {{ user.avatar }} </td>
                 </tr>

                 <tr>
                     <th> Roles </th>
                     <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                 </tr>

                 <tr>
                     <th> Mot de passe </th>
                     <td>{{ user.password }}</td>
                 </tr>

             </tbody>

         </table>

             <button class="btn btn-primary btn-lg btn-block">
                 <a href="{{ path('user_edit', {'id': user.id}) }}"> Modifier </a>
             </button>

             {{ include('user/_delete_form.html.twig') }}

              <button class="btn btn-primary btn-lg btn-block">
                 <a href="{{ path('user_index') }}"> Revenir à la liste </a>
             </button>
             
 {% endblock %}
