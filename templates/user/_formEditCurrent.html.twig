
 {{ form_start(form) }}

    <div class="container">
    
       <div class="row">      

          {# *** PSEUDO *** #}     

             <div class="pseudo row">

                <div class="pseudoLabel">
                   {{ form_label(form.login, 'Pseudo :') }}
                </div>

                <div class="pseudoInput">
                   {{ form_widget (form.login,
                      { 'attr':{'placeholder':'Entrez un pseudo'}}
                   ) }}
                </div>

             {# *** If Errors **** #}

                <div class="pseudoError">
                   {{form_errors(form.login)}}
                </div>

             </div>

          {# *** PRÉNOM *** #}

             <div class="prenom row">
        
                <div class="prenomLabel">
                   {{ form_label(form.firstname, 'Prénom :') }}
                </div>

                <div class="prenomInput">
                   {{ form_widget (form.firstname,{
                        'attr':{'placeholder':'Entrez votre prénom'}}
                   ) }}
                </div>

             {# *** If Errors *** #}

                <div class="prenomError">
                   {{form_errors(form.firstname)}}
                </div>

             </div>

          {# *** NOM ***  #}

             <div class="nom row">

                <div class="nomLabel">
                   {{ form_label(form.lastname, 'Nom :') }}
                </div>

                <div class="nomInput">
                   {{ form_widget (form.lastname,{
                        'attr':{'placeholder':'Entrez votre Nom'}}
                   ) }}
                </div>
                 
             {# *** If Errors *** #}

                <div class="nomError">
                   {{form_errors(form.lastname)}}
               </div>

             </div>

          {# *** EMAIL *** #}

             <div class="email row">

                <div class="emailLabel">
                   {{ form_label(form.email, 'email :') }}
                </div>

                <div class="emailInput">
                   {{ form_widget (form.email,{
                        'attr':{'placeholder':'Entrez votre email'}}
                   ) }}
                </div>

             {# *** If Errors *** #}

                <div class="emailError">
                   {{form_errors(form.email)}}
                </div>

             </div>

          {# *** ADDRESSE *** #}

             <div class="address row">

                <div class="addressLabel">
                   {{ form_label(form.address, 'address :') }}
                </div>

                <div class="addressInput">
                   {{ form_widget (form.address,{
                      'attr':{'placeholder':'Entrez votre address'}}
                   ) }}
                </div>

             {# *** If Errors *** #}

                <div class="addressError">
                   {{form_errors(form.address)}}
                </div>

             </div>

          {# *** TÉLÉPHONE *** #}

             <div class="phone row">

                <div class="phoneLabel">
                   {{ form_label(form.phone, 'Téléphone :') }}
                </div>

                <div class="phoneInput">
                   {{ form_widget (form.phone,{
                        'attr':{'placeholder':'Entrez votre numéro de téléphone'}}
                   ) }}
                </div>

            {# *** If Errors *** #}

                <div class="phoneError">
                   {{form_errors(form.phone)}}
                </div>
                
             </div>

             {# *** AVATAR *** #}

             <div class="avatar row">

                <div class="avatarLabel">
                   {{ form_label(form.avatar, 'Avatar :') }}
                </div>

                <div class="avatarInput">
                   {{ form_widget (form.avatar,{
                        'attr':{'placeholder':'Ajouter une image'}}
                   ) }}
                </div>

            {# *** If Errors *** #}

                <div class="avatarError">
                   {{form_errors(form.avatar)}}
                </div>
                
             </div>            
                            
       </div>

    </div>

       <button class="btn btn-primary btn-lg btn-block">
          {{ button_label|default('Sauvegarder') }}
       </button>
            
       <button class="btn btn-primary btn-lg btn-block">
          <a href="{{ path('user_index') }}"> Retour à la liste </a>                
       </button> 

 {{ form_end(form) }}


