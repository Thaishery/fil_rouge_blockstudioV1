 {% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Accueil "
     {% endblock %}


     {% block title %} 
         Accueil 
     {% endblock %}

     {% block body %}

         <div class="example-wrapper">






             <h1 class="h3 mb-3 font-weight-normal"> Accueil </h1>

                 <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">

                     <div class="carousel-indicators">
                         <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                         <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                         <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                     </div>
                
                     
                     <div class="carousel-inner">

                         {# *** Premier élément du carousel *** #}
                         <div class="carousel-item active">

                             <a href="{{path ("artistes")}}">

                                 <img src="{{ asset ('Photos/enregistrement6.jpg') }}" class="d-block w-100" alt="Photo block studio,caroussel element n°6">

                                 <div class="carousel-caption d-none d-md-block ">

                                     <div class="greybox">

                                         <h5> BLOCK STUDIO </h5>

                                             <p>
                                                 Bienvenue sur notre site.
                                             </p>

                                     </div>  

                             </a>

                         </div>

                     </div>

                         {# *** Second élément du carousel *** #}
                         <div class="carousel-item">

                             <img src="{{ asset ('Photos/enregistrement1.jpg') }}" class="d-block w-100" alt="Photo block studio,caroussel element n°1">

                                 <div class="carousel-caption d-none d-md-block ">

                                     <div class="greybox">

                                         <h5> BLOCK STUDIO </h5>

                                             <p>
                                                 Vous accompagne dans la réalisation de votre projet.
                                             </p>

                                     </div>

                                 </div>

                         </div>


                         {# *** Troisième élément du carousel *** #}
                         <div class="carousel-item">

                             <img src="{{ asset ('Photos/enregistrement4.jpg') }}" class="d-block w-100" alt="Photo block studio,caroussel element n°4">

                                 <div class="carousel-caption d-none d-md-block">

                                     <div class="greybox">

                                         <h5> BLOCK STUDIO </h5>

                                             <p>
                                                 Vous propose de faire du mixage et du mastering pour finaliser vos morceaux.<br/>                                   
                                             </p>

                                     </div>

                                 </div>

                         </div>

                     </div>

                         <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"  data-bs-slide="prev">
                             <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                             <span class="visually-hidden"> Précédent </span>
                         </button>

                         <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"  data-bs-slide="next">
                             <span class="carousel-control-next-icon" aria-hidden="true"></span>
                             <span class="visually-hidden"> Suivant </span>
                         </button>

                     </div>

                 {# boucle sur les entité de home pour trouver l'active #}
                 {% for home in homes %}

                     {# ne prend que la homepage active #}
                     {% if home.isActive == true %}

                         <article>

                             <h2> {{ home.title }} </h2>

                             <div class="row">

                                 <div class="col">
                                    <img class="homeImage" src="{{ home.picture }}">
                                 </div>

                                 <div class="col">
                                     <p class ="homeShortDesc">{{ home.shortDesc }}</p>
                                 </div>

                             </div>

                             <p class ="homeLongDesc">{{ home.longDesc }}</p>

                         </article>

                     {% endif %}

                 {% endfor %}
                 
             
         </div>




     {% endblock %}

